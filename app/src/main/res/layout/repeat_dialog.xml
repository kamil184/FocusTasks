<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/repeat_dialog_every_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/every"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:layout_constraintBottom_toBottomOf="@+id/repeat_dialog_every_number_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_every_number_edit_text" />

    <EditText
        android:id="@+id/repeat_dialog_every_number_edit_text"
        android:layout_width="60dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/date_picker_calendar_text_background"
        android:backgroundTint="?colorSurfaceVariant"
        android:gravity="center"
        android:maxLength="2"
        android:inputType="number"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_every_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repeat_dialog_every_time_units"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/date_picker_calendar_text_background"
        android:backgroundTint="?colorSurfaceVariant"
        android:gravity="center_vertical"
        android:inputType="none"
        android:padding="12dp"
        android:text="@string/week"
        app:drawableEndCompat="@drawable/ic_expand_more_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_every_number_edit_text"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- days begins -->
    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_monday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:layout_marginTop="16dp"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toStartOf="@+id/repeat_dialog_tuesday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeat_dialog_every_time_units"
        tools:backgroundTint="?colorPrimary"
        tools:text="П"
        tools:textColor="?colorOnPrimary"
        tools:visibility="gone" />

    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_tuesday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toStartOf="@+id/repeat_dialog_wednesday"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_monday"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_monday"
        tools:backgroundTint="?colorSurfaceVariant"
        tools:text="В"
        tools:textColor="?colorOnSurfaceVariant"
        tools:visibility="gone" />

    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_wednesday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toStartOf="@+id/repeat_dialog_thursday"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_tuesday"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_monday"
        tools:backgroundTint="?colorSurfaceVariant"
        tools:text="С"
        tools:textColor="?colorOnSurfaceVariant"
        tools:visibility="gone" />

    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_thursday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toStartOf="@+id/repeat_dialog_friday"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_wednesday"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_monday"
        tools:backgroundTint="?colorPrimary"
        tools:text="Ч"
        tools:textColor="?colorOnPrimary"
        tools:visibility="gone" />

    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_friday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toStartOf="@+id/repeat_dialog_saturday"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_thursday"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_monday"
        tools:backgroundTint="?colorSurfaceVariant"
        tools:text="П"
        tools:textColor="?colorOnSurfaceVariant"
        tools:visibility="gone" />

    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_saturday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toStartOf="@+id/repeat_dialog_sunday"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_friday"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_monday"
        tools:backgroundTint="?colorSurfaceVariant"
        tools:text="С"
        tools:textColor="?colorOnSurfaceVariant"
        tools:visibility="gone" />

    <com.kamil184.focustasks.ui.tasks.RepeatDialogDayTextView
        android:id="@+id/repeat_dialog_sunday"
        android:layout_width="@dimen/repeat_dialog_day_size"
        android:layout_height="@dimen/repeat_dialog_day_size"
        android:background="@drawable/repeat_dialog_day_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repeat_dialog_saturday"
        app:layout_constraintTop_toTopOf="@+id/repeat_dialog_monday"
        tools:backgroundTint="?colorSurfaceVariant"
        tools:text="В"
        tools:textColor="?colorOnSurfaceVariant"
        tools:visibility="gone" />
    <!-- days ends -->

